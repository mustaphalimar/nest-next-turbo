generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  author_id Int
  post_id   Int
  user      User
  post      Post
  createdAt DateTime @default(now()) @db.Timestamp(6)
}

model Group {
  id            Int           @id @default(autoincrement())
  name          String
  user_to_group UserToGroup[]
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  author_id Int
  comments  Comment[]
  user      User[]
  createdAt DateTime  @default(now()) @db.Timestamp(6)
}

model ProfileInfo {
  id      Int   @id @default(autoincrement())
  user_id Int?
  metadat Json?
}
